<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.WelcomeController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label text="🍳 Recipe Builder" style="-fx-font-size: 24px;"/>
  <Button fx:id="newRecipeBtn"
          text="Create New Recipe"
          onAction="#onCreateNewRecipe"/>
  <Button fx:id="openRecipeBtn"
          text="Open Existing Recipe"
          onAction="#onOpenRecipe"/>
</VBox>
